    <style>
        .fixed-size {
            width: 100%; /* Đảm bảo ảnh chiếm hết container */
            height: 300px; /* Chiều cao cố định */
            object-fit: cover; /* Giữ tỉ lệ ảnh và cắt phần dư */
        }

        .carousel-indicators {
            bottom: -30px; /* Đẩy chấm xuống dưới 30px */
        }

            .carousel-indicators [data-bs-target] {
                width: 22px; /* Đường kính của chấm */
                height: 22px; /* Đường kính của chấm */
                border-radius: 100%; /* Làm tròn hoàn toàn */
                background-color: white; /* Màu xám cho chấm không active */

                margin: 0 5px; /* Khoảng cách giữa các chấm */
                transition: background-color 0.3s ease; /* Hiệu ứng chuyển màu */
            }

            .carousel-indicators .active {
                background-color: #007bff; /* Màu xanh cho chấm active */
            }

        .contact-buttons {
            position: fixed;
            bottom: 20px;
            left: 20px;
            display: flex;
            flex-direction: row;
            gap: 10px;
            z-index: 1000;
        }

            .contact-buttons a {
                display: block;
                transition: transform 0.3s ease, box-shadow 0.3s ease;
            }

                .contact-buttons a:hover {
                    transform: translateY(-3px);
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                }

            .contact-buttons img {
                width: 50px;
                height: 50px;
                border-radius: 50%;
            }

        .process-container {
            padding: 50px 0;
        }

        .process-box {
            border: 2px solid #0d6efd;
            width: 300px; /* Đặt chiều rộng cố định */
            height: 350px; /* Đặt chiều cao cố định */
            padding: 20px;
            border-radius: 8px;
            background: #fff;
            transition: 0.3s;
            text-align: center;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

            .process-box:hover {
                background: #0d6efd;
                color: #fff;
            }

                .process-box:hover h5,
                .process-box:hover p {
                    color: #fff;
                }

            .process-box i {
                font-size: 40px;
                color: #0d6efd;
                margin-bottom: 10px;
            }

            .process-box:hover i {
                color: #fff;
            }

        .process-number {
            font-size: 24px;
            font-weight: bold;
            color: #0d6efd;
        }

        .process-box:hover .process-number {
            color: #fff;
        }

        .custom-btn {
            font-size: 14px;
            font-weight: bold;
            padding: 10px 15px;
            border-radius: 8px; /* Bo tròn góc */
            transition: all 0.3s ease-in-out;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
        }

            .custom-btn i {
                margin-right: 6px;
            }

            /* Hiệu ứng hover */
            .custom-btn:hover {
                transform: scale(1.05);
                box-shadow: 4px 4px 15px rgba(0, 0, 0, 0.25);
            }

        /* Nút "Đăng ký tư vấn" khi hover */
        .btn-primary.custom-btn:hover {
            background-color: #0056b3;
            border-color: #004a9f;
        }

        /* Nút "Đăng ký báo giá" khi hover */
        .btn-warning.custom-btn:hover {
            background-color: #e0a800;
            border-color: #d39e00;
        }
        /* Bo tròn và hiệu ứng đổ bóng cho modal */
        .modal-content {
            border-radius: 10px;
            box-shadow: 0px 10px 30px rgba(0, 0, 0, 0.3);
            border: none;
        }

        /* Căn giữa tiêu đề modal */
        .modal-title {
            font-weight: bold;
            color: #333;
        }

        /* Chỉnh sửa phần header của modal */
        .modal-header {
            background: #f8f9fa;
            border-bottom: 2px solid #ddd;
            border-top-left-radius: 10px;
            border-top-right-radius: 10px;
            padding: 15px;
        }

        /* Định dạng input và textarea */
        .modal-body input,
        .modal-body textarea {
            border-radius: 6px;
            border: 1px solid #ccc;
            transition: all 0.3s ease-in-out;
        }

            .modal-body input:focus,
            .modal-body textarea:focus {
                border-color: #007bff;
                box-shadow: 0px 0px 8px rgba(0, 123, 255, 0.3);
            }

        /* Hiệu ứng hover cho nút gửi yêu cầu */
        .modal-body .btn {
