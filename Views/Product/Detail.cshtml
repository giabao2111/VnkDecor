    <!-- JavaScript tùy chỉnh để đồng bộ Carousel -->
    <script>
        // Lấy các carousel
        const mainCarousel = document.getElementById('mainCarousel');
        const galleryCarousel = document.getElementById('galleryCarousel');
        const galleryImages = document.querySelectorAll('.gallery-image');

        // Đồng bộ carousel phụ khi carousel chính di chuyển
        mainCarousel.addEventListener('slide.bs.carousel', function (event) {
            const slideIndex = event.to;
            const galleryCarouselInstance = bootstrap.Carousel.getOrCreateInstance(galleryCarousel);
            galleryCarouselInstance.to(slideIndex);
        });

        // Đồng bộ carousel chính khi carousel phụ di chuyển
        galleryCarousel.addEventListener('slide.bs.carousel', function (event) {
            const slideIndex = event.to;
            const mainCarouselInstance = bootstrap.Carousel.getOrCreateInstance(mainCarousel);
            mainCarouselInstance.to(slideIndex);
        });

        // Cập nhật carousel chính khi nhấp vào hình trong carousel phụ
        galleryImages.forEach(image => {
            image.addEventListener('click', function () {
                const mainIndex = parseInt(this.getAttribute('data-main-index'));
                const mainCarouselInstance = bootstrap.Carousel.getOrCreateInstance(mainCarousel);
                const galleryCarouselInstance = bootstrap.Carousel.getOrCreateInstance(galleryCarousel);

                // Di chuyển cả hai carousel đến vị trí tương ứng
                mainCarouselInstance.to(mainIndex);
                galleryCarouselInstance.to(mainIndex);
            });
        });
    </script>
